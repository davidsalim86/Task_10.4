<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>DS Quants</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
</head>

<body>
    <%- include('navbar') -%>

        <div class="container">
            <h1 class="my-5">Create an Account</h1>

            <form class="needs-validation" action="/register" method="post" novalidate>
                <div class="mb-3">
                    <label for="regUsername" class="form-label">Username</label>
                    <input name="username" type="text" class="form-control" id="regUsername" required>
                    <div class="invalid-feedback">Choose a username.</div>
                </div>
                <div class="mb-3">
                    <label for="regPassword" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="regPassword" minlength="4" required>
                    <div class="invalid-feedback">Enter a password (min 4 characters).</div>
                </div>
                <div class="mb-3">
                    <label for="regConfirm" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="regConfirm" required>
                    <div class="invalid-feedback">Passwords must match.</div>
                </div>
                <button type="submit" class="btn btn-primary mb-3">Register</button>

            </form>
            <p>
                <a href="investorportal.html">Back to login</a>
            </p>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
            </script>
        <script>
            (() => {
                'use strict'
                const form = document.querySelector('.needs-validation')

                form.addEventListener('submit', event => {
                    const pwd = document.getElementById('regPassword').value;
                    const cpwd = document.getElementById('regConfirm').value;
                    if (pwd !== cpwd) {
                        document.getElementById('regConfirm').setCustomValidity('Passwords do not match');
                    } else {
                        document.getElementById('regConfirm').setCustomValidity('');
                    }
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                });
            })();
        </script>
</body>

</html>